<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_alarm_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_search_button"
                android:drawableEnd="@drawable/ic_search_gray_24dp"
                app:layout_constraintTop_toBottomOf="@id/iv_app_logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_component_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toStartOf="@id/iv_component_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_search"
                app:srcCompat="@drawable/component_1" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_component_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/iv_component_3"
                app:layout_constraintStart_toEndOf="@id/iv_component_1"
                app:layout_constraintTop_toBottomOf="@id/iv_search"
                app:layout_constraintTop_toTopOf="@id/iv_component_1"
                app:srcCompat="@drawable/component_2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_component_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_component_2"
                app:layout_constraintTop_toTopOf="@id/iv_component_1"
                app:srcCompat="@drawable/component_3" />


            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/iv_component_1" />

            <TextView
                android:id="@+id/tv_farming_tour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:textColor="@color/colorWhiteBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/iv_search"
                app:layout_constraintTop_toBottomOf="@id/vp_viewpager"
                tools:text="숙박비는 열정으로" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_farming_tours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_farming_tour"
                tools:listitem="@layout/item_guide_tour" />

            <Button
                android:id="@+id/btn_view_all_lodgment"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_btn_orange_edge"
                android:gravity="center"
                android:text="숙박 전체보기"
                android:textColor="@color/colorOrange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_farming_tours" />

            <TextView
                android:id="@+id/tv_more_fun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textColor="@color/colorWhiteBlack"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/iv_search"
                app:layout_constraintTop_toBottomOf="@id/btn_view_all_lodgment"
                tools:text="일일 농부 체험" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_more_funs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_more_fun"
                tools:listitem="@layout/item_guide_tour" />

            <Button
                android:id="@+id/btn_view_all_program"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/bg_btn_orange_edge"
                android:gravity="center"
                android:text="투어 전체보기"
                android:textColor="@color/colorOrange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rv_more_funs" />

            <TextView
                android:id="@+id/tv_banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                android:background="@color/colorWhiteGray"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toBottomOf="@id/btn_view_all_program"
                tools:text="무전여행 200% 즐기는 방법(배너링크)" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>